{
  "name": "angular-plugin-architecture",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:plugins && npm run build:app",
    "non-postinstall": "tsc -p builder/tsconfig.builder.json",
    "build:app": "ng build --prod --aot",
    "build:plugins": "npm run build:shared && npm run build:content && npm run build:plugin1 && npm run build:plugin2 && npm run build:navigation-topbar",
    "build:shared": "ng build shared --prod && ng build plugins --prod --aot --modulePath=shared#SharedModule --pluginName=shared --outputPath=./app/assets/plugins",
    "build:content": "ng build plugins --prod --aot --modulePath=./content/content.module#ContentModule --pluginName=content --sharedLibs=shared --outputPath=./app/assets/plugins",
    "build:plugin1": "ng build plugins --prod --aot --modulePath=./plugin1/plugin1.module#Plugin1Module --pluginName=plugin1 --sharedLibs=shared --outputPath=./app/assets/plugins",
    "build:plugin2": "ng build plugins --prod --aot --modulePath=./plugin2/plugin2.module#Plugin2Module --pluginName=plugin2 --sharedLibs=shared --outputPath=./app/assets/plugins",
    "build:navigation-topbar": "ng build plugins --prod --aot --modulePath=./navigation-topbar/navigation-topbar.module#NavigationTopbarModule --pluginName=navigation-topbar --sharedLibs=shared --outputPath=./app/assets/plugins"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "^0.901.4",
    "@angular-devkit/build-ng-packagr": "^0.901.4",
    "@angular/animations": "^9.1.4",
    "@angular/cdk": "^9.2.2",
    "@angular/common": "^9.1.4",
    "@angular/compiler": "^9.1.4",
    "@angular/core": "^9.1.4",
    "@angular/forms": "^9.1.4",
    "@angular/material": "^9.2.2",
    "@angular/platform-browser": "^9.1.4",
    "@angular/platform-browser-dynamic": "^9.1.4",
    "@angular/router": "^9.1.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/pluginutils": "^3.0.10",
    "core-js": "^3.6.4",
    "eslint": "^6.8.0",
    "remove": "^0.1.5",
    "rollup": "^2.7.6",
    "rxjs": "~6.5.4",
    "systemjs": "6.2.3",
    "tslib": "^1.11.0",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular/cli": "^9.0.3",
    "@angular/compiler-cli": "^9.1.4",
    "@angular/language-service": "^9.0.2",
    "@nguniversal/builders": "^9.0.1",
    "@types/node": "^13.7.4",
    "codelyzer": "^5.2.2",
    "karma": "~4.4.1",
    "ng-packagr": "^9.0.1",
    "ts-loader": "^6.2.1",
    "tslint": "^6.1.2",
    "typescript": "~3.7.5",
    "webpack-cli": "^3.3.11"
  }
}
